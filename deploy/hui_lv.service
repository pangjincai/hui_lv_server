[Unit]
Description=Hui Lv Server
After=network.target

[Service]
# Working Directory - Config file should be here
WorkingDirectory=/data/hui_lv
# Path to executable
# The -log parameter now specifies the base name. 
# "hui_lv_server" will result in "hui_lv_server_YYYY-MM-DD.log"
ExecStart=/data/hui_lv/hui_lv_server_linux -log /data/logs/hui_lv_server
# Restart on crash
Restart=always
# Run as user (change if not root)
User=root

[Install]
WantedBy=multi-user.target
